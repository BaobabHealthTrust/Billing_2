<!DOCTYPE html>
<html>
<head>
  <title>Billing</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag '/touchscreentoolkit/lib/javascripts/touchScreenToolkit.js', defer: 'true' %>
  <%= csrf_meta_tags %>
</head>
<body>
<% if logged_in? %>
    <!-- Fixed navbar -->
    <div class="pos-f-t">
      <div class="collapse" id="navbar-header">
        <div class="container-fluid bg-inverse p-a-1">
          <h3>Collapsed content</h3>
          <p>Toggleable via the navbar brand.</p>
        </div>
      </div>
      <nav class="navbar navbar-dark navbar-fixed-top bg-inverse">
        <div class="container-fluid">
          <button class="navbar-toggler hidden-sm-up" type="button" data-toggle="collapse"
                  data-target="#exCollapsingNavbar2">
            &#9776;
          </button>
          <div class="collapse navbar-toggleable-xs" id="exCollapsingNavbar2">
            <a class="navbar-brand" href="#">Billing</a>
            <ul class="nav navbar-nav">
              <li class="nav-item active">
                <a class="nav-link" href="/">HOME <span class="sr-only">(current)</span></a>
              </li>
              <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle"
                   data-toggle="dropdown" href="#"
                   role="button" aria-haspopup="true" aria-expanded="false">
                  Services
                </a>
                <div class="dropdown-menu">
                  <a class="dropdown-item" href='/accounts'>View Accounts</a>
                  <a class="dropdown-item" href="#">Amount Due</a>
                  <div class="dropdown-divider"></div>
                  <a class="dropdown-item" href='/services'>All Services</a>
                </div>
              </li>
              <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle"
                   data-toggle="dropdown" href="#"
                   role="button" aria-haspopup="true" aria-expanded="false">
                  Reports
                </a>
                <div class="dropdown-menu">
                  <a class="dropdown-item" href="#">Daily</a>
                  <a class="dropdown-item" href="#">Weekly</a>
                  <a class="dropdown-item" href="#">Monthly</a>
                  <div class="dropdown-divider"></div>
                  <a class="dropdown-item" href='/reports'>All Reports</a>
                </div>
              </li>
              <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle"
                   data-toggle="dropdown" href="#"
                   role="button" aria-haspopup="true" aria-expanded="false">
                  Health Insurance
                </a>
                <div class="dropdown-menu">
                  <a class="dropdown-item" href='/insurance'>Insurance Cover</a>
                  <div class="dropdown-divider"></div>
                  <a class="dropdown-item" href='/reports'>&nbsp;</a>
                </div>
              </li>
              <li class="nav-item pull-lg-right">
                <a class="nav-link" href="/logout">Logout</a>
              </li>
            </ul>
          </div>
        </div>
      </nav>
    </div>
<% end %>
<div class='container-fluid' style='padding-top: 70px;'>
  <%= yield %>
</div>
<% if logged_in? %>
    <!-- Footer fixed -->
    <footer class="footer">
      <div class="container-fluid bg-inverse navbar-fixed-bottom">
        <span class='text-muted'>Billing 2016.</span>
      </div>
    </footer>
<% end %>
</body>
</html>
