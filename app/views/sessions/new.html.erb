<%= form_for(:session, url: login_path, :html => {class: 'form-signin'} ) do |f| %>
    <h2 class="form-signin-heading">Please log in</h2>
    <label for="inputEmail" class="sr-only">Username:</label>
    <%= f.text_field :username, id: 'username', placeholder: 'Username', class: 'form-control' %>
    <label for="inputPassword" class="sr-only">Password:</label>
    <%= f.password_field :password, id: 'password', placeholder: 'Password', class: 'form-control' %>
    <div class="checkbox">
      <label>
        <input type="checkbox" value="remember-me"> Remember me
      </label>
    </div>
    <button class="btn btn-lg btn-primary btn-block" type="submit">Log in</button>
<% end %>



